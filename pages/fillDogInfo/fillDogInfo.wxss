/* pages/fillDogInfo/fillDogInfo.wxss */
page{
    height: 100%;
}
.container{
    background-color: rgb(239, 239, 244);
    justify-content: initial;
}
.form-box{
    width:100%;
    background-color: #fff;
    margin-top: 30rpx;
}
.row-wrap{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
    padding:0 30rpx;
    box-sizing:border-box;
}
.row-wrap .label{
    width: 160rpx;
    color: #000;
    letter-spacing: 2rpx;
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;letter-spacing: 2rpx;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 670rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin-top:60rpx; 
    border-radius: 16rpx;
    box-sizing: border-box; 
}
.save-btn{
    background: -webkit-linear-gradient(left,rgb(136, 169, 255),rgb(41, 147, 255));
    color:#fff;font-size: 34rpx;letter-spacing: 4rpx;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}
.dogInfo-box{
  margin:30rpx 24rpx;
  box-shadow: 6rpx 10rpx 6rpx  #c6d7ef;
  overflow: hidden; 
}
.dogInfo{
  /* border: 1px solid; */
  overflow: hidden;
  border-radius: 16rpx;
  font-size: 32rpx;
  padding-bottom: 30rpx;
}
.pedigree{
  background: -webkit-linear-gradient(left bottom,rgb(144, 202, 255),rgb(216, 237, 255));
  color:#fff;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 30rpx;overflow: hidden;
  font-size: 26rpx;
}
.dogInfoDetail{
  padding:0 30rpx;
}

.dogInfoDetail .dogInfo_key{
  color:#318eff;font-size: 26rpx;
}
.dogInfo-item{
  display: flex;  
  flex-direction: row;
}
.dogInfoDetail>view{
  height: 78rpx;
  line-height: 78rpx;
  border-bottom:1px solid #d7eaff;
}

.dogInfo-item-text{
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.cityName{
  display: flex;align-items: center;
  justify-content: space-between;
  flex: 1;
}
.cityName image{
  width:32rpx;
  height:32rpx;
}
.icon-xinghao{
  color:red;font-size:16rpx;
  padding:0 6rpx;
}
.chipNoWrap{display:flex;
align-content:center;
}
.icon-gengduo{
  color:rgb(199, 199, 204);
}